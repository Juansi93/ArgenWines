{{>header}}

{{!-- ---- --}}
<section id="vinos">
    <div class="container p-3 text-center text-justify bg-light mb-5" id="vinos-blancos">
        <h1 class="p-3 mb-3" id="vinos-tintos">WHITE WINES</h1>
        <div class="m-4">
            <a href="/products/addItem"><button class="btn btn-success w-25">Add Wine</button></a>
        </div>

        
        <div class="row d-flex justify-content-around ">
            {{#each data}}


                <div class="card d-flex flex-column justify-content-center product-card border-secondary  m-1 p-3 col-12 col-10 col-md-5 col-lg-3 mb-5">
                    <div class="p-3">
                        <img class="img-fluid mb-2" src={{imageURL}} alt="{{name}}">
                    </div>
                    <div class="card-header">{{name}}</div>
                    <div class="card-body text-secondary">
                        <h5 class="card-title">${{price}}</h5>
                        <p class="card-text">{{description}}</p>
                    </div>
                   
                    <a href="/products/handleEdit/{{id}}" ><button class="btn btn-primary w-75 mb-1">Edit</button></a>
                    <a href="/products/handleEdit/{{id}}" ><button class="btn btn-danger w-75">Delete</button></a>
                
                </div>


            {{/each}}
        </div>
    </div>
</section>


  



